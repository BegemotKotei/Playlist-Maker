<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customToast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCustomToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/o_8dp"
        android:layout_marginVertical="@dimen/o_16dp"
        android:background="@color/whiteOrBlack"
        android:paddingVertical="@dimen/o_16dp"
        app:layout_constraintBottom_toBottomOf="@id/customToast"
        app:layout_constraintEnd_toEndOf="@id/customToast"
        app:layout_constraintStart_toStartOf="@id/customToast"
        app:layout_constraintTop_toTopOf="@id/customToast">

        <TextView
            android:id="@+id/toastMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:gravity="center"
            android:textColor="@color/blackOrWhite"
            android:textSize="@dimen/o_14sp"
            app:layout_constraintBottom_toBottomOf="@id/clCustomToast"
            app:layout_constraintEnd_toEndOf="@id/clCustomToast"
            app:layout_constraintStart_toStartOf="@id/clCustomToast"
            app:layout_constraintTop_toTopOf="@id/clCustomToast" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>