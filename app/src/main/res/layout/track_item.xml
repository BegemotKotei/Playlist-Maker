<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootTrackLayout"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivArtworkUrl100"
        android:layout_marginStart="@dimen/o_12dp"
        android:layout_marginTop="@dimen/o_8dp"
        android:layout_marginBottom="@dimen/o_8dp"
        android:layout_gravity="center"
        android:layout_width="@dimen/o_48dp"
        android:layout_height="@dimen/o_48dp"/>

    <LinearLayout
        android:layout_width="@dimen/o_0dp"
        android:layout_marginTop="@dimen/o_16dp"
        android:layout_marginBottom="@dimen/o_16dp"
        android:layout_marginStart="@dimen/o_8dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTrackName"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="@dimen/o_16sp"
            android:layout_width="match_parent"
            tools:text="[Лёша]"
            android:layout_marginBottom="@dimen/o_4dp"
            android:textColor="@color/whiteOrBlack"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvArtistName"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/o_12sp"
                android:textColor="@color/greyOrWhite"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="[Ларёк с журнальчиками]"
                android:layout_width="@dimen/o_0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:tint="@color/greyOrWhite"
                android:src="@drawable/point_ic"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                app:tint="@color/greyOrWhite"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/tvTrackTime"
                android:textSize="@dimen/o_12sp"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/greyOrWhite"
                tools:text="2:31"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:src="@drawable/arrow_forward"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/o_8dp"
        android:layout_marginTop="@dimen/o_20dp"
        android:layout_marginEnd="@dimen/o_12dp"
        android:layout_marginBottom="@dimen/o_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>