<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blackorwhite"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar_settings"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/arrow_back"
        app:title="@string/settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/white">

        <TextView
            android:layout_width="@dimen/o_0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/o_20dp"
            android:layout_marginBottom="@dimen/o_20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/o_16dp"
            android:gravity="center_vertical"
            android:text="@string/dark_mode"
            android:textColor="@color/whiteorblack"
            android:textSize="@dimen/o_16sp" />

        <Switch
            android:id="@+id/switch_day_or_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="6dp"
            android:thumbTint="@color/greyOrBlue"
            android:trackTint="@color/greyOrBlue1"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <Button
        android:id="@+id/button_share_app"
        style="@style/SettingsButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_app"
        app:drawableEndCompat="@drawable/share" />

    <Button
        android:id="@+id/button_write_support"
        style="@style/SettingsButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/write_support"
        app:drawableEndCompat="@drawable/support" />

    <Button
        android:id="@+id/button_user_agreement"
        style="@style/SettingsButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_agreement"
        app:drawableEndCompat="@drawable/arrow_forward" />

</LinearLayout>