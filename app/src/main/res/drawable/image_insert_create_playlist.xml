<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="@dimen/o_100dp"
                android:height="@dimen/o_100dp" />
            <corners android:radius="@dimen/o_12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/o_2dp"
                android:color="@color/grey"
                android:dashWidth="@dimen/o_16dp"
                android:dashGap="@dimen/o_16dp" />
            <corners android:radius="@dimen/o_12dp" />
        </shape>
    </item>
    <item
        android:width="@dimen/o_84dp"
        android:height="@dimen/o_84dp"
        android:drawable="@drawable/add_image_ic"
        android:gravity="center" />
</layer-list>